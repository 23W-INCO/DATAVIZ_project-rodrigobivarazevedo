{
  "name": "Flask-Dev-Container",
  "image": "python:3.10.10",
  "dockerFile": "../app/DOCKERFILE",
  "extensions": ["ms-python.python"],
  "settings": {
      "terminal.integrated.shell.linux": "/bin/sh"
  },
  "forwardPorts": [5000],
  "postCreateCommand": "/bin/sh -c 'cd /app && python app.py'",
  "workspaceMount": "source=${localWorkspaceFolder}/app,target=/app,type=bind,consistency=delegated",
  "workspaceFolder": "/app"
}
